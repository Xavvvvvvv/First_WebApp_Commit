{
  "compilerOptions": {
    "outDir" : "dist",
    "rootDir" : "src",
    "target": "ES6",
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": false,
        "esModuleInterop": true,
        "lib": ["es2017", "dom"],
    "strict": true,
    "experimentalDecorators": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]

}
